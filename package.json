{
  "name": "retailfixit-vendor-dispatch",
  "version": "1.0.0",
  "description": "AI-Orchestrated Vendor Dispatch System for RetailFixIt",
  "private": true,
  "workspaces": [
    "src/backend/shared",
    "src/backend/vendor-scoring-service",
    "src/backend/explainability-layer",
    "src/backend/event-integration",
    "src/backend/api",
    "src/frontend/admin-ui"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "fast-check": "^3.14.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
